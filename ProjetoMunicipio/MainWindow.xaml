<Window x:Class="ProjetoMunicipio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ProjetoMunicipio.ViewModels"
        mc:Ignorable="d"
        Title="Municípios" Height="450" Width="800">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 1) Buscar por nome -->
        <GroupBox Header="Buscar Município" Grid.Row="0" Margin="0,0,0,10" Padding="8">
            <StackPanel Orientation="Horizontal">
                <TextBox Width="200"
                 Text="{Binding NomeBusca, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,8,0"/>
                <Button Content="Buscar"
                Command="{Binding BuscarPorNomeCmd}"
                Margin="0,0,8,0"/>
                <TextBlock Text="{Binding MuniEncontrado.NomeDoMunicipio}"/>
            </StackPanel>
        </GroupBox>

        <!-- 2) População por UF -->
        <GroupBox Header="População por Estado" Grid.Row="1" Margin="0,0,0,10" Padding="8">
            <StackPanel Orientation="Horizontal">
                <TextBox Width="50"
                 Text="{Binding UfBusca, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,8,0"/>
                <Button Content="Calcular"
                Command="{Binding BuscarPopUfCmd}"
                Margin="0,0,8,0"/>
                <TextBlock Text="{Binding PopulacaoTotal}"/>
            </StackPanel>
        </GroupBox>

        <!-- 3) Listar Capitais -->
        <GroupBox Header="Capitais" Grid.Row="2" Padding="8">
            <DockPanel>
                <Button Content="Atualizar"
                Command="{Binding ListarCapitaisCmd}"
                DockPanel.Dock="Top"
                Margin="0,0,0,8"/>
                <DataGrid ItemsSource="{Binding Capitais}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Município"
                                Binding="{Binding NomeDoMunicipio}"/>
                        <DataGridTextColumn Header="UF"
                                Binding="{Binding Uf}"/>
                        <DataGridTextColumn Header="População"
                                Binding="{Binding Populacao}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </GroupBox>

    </Grid>
</Window>
